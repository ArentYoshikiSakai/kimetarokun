{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "chrome",
        "request": "launch",
        "name": "Launch Chrome against Next.js",
        "url": "http://localhost:3000",
        "webRoot": "${workspaceFolder}",
        "sourceMapPathOverrides": {
          "webpack://_N_E/*": "${webRoot}/*"
        }
      },
      {
        "type": "node",
        "request": "launch",
        "name": "Launch Next.js Server",
        "runtimeExecutable": "npm",
        "runtimeArgs": ["run", "dev"],
        "skipFiles": ["<node_internals>/**"],
        "outFiles": ["${workspaceFolder}/.next/server/**/*.js"],
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen"
      }
    ],
    "compounds": [
      {
        "name": "Full Next.js (Server + Client)",
        "configurations": ["Launch Next.js Server", "Launch Chrome against Next.js"]
      }
    ]
  }